<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash screen theme for Android 12+ -->
    <style name="Theme.Bloom.Splash" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowSplashScreenBackground">#1A1A1A</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splashscreen_logo</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#1A1A1A</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Main app theme -->
    <style name="Theme.Bloom" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">#1A1A1A</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
